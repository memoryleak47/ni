# @.arg{0, 1}
proc payload_ge {
    @.ret = {};
    @.ret.payload = @.arg[0].payload >= @.arg[1].payload;
    @.ret.type = @.singletons.bool;
    jmp pop_stack;
}

# @.arg{0, 1}
proc std_eq {
    %a = @.singletons.primitive[@.arg[0].type];
    %b = @.singletons.primitive[@.arg[0].type];

    %tab = {};
    %tab[Undef] = std_eq_prim;
    %tab[%a] = std_eq_nonprim;
    %tab[%b] = std_eq_nonprim;
    jmp %tab[Undef];
}

proc std_eq_prim {
    %a = @.arg[0].payload;
    %b = @.arg[1].payload;

    %tab = {};
    %tab[%a] = @.singletons.false;
    %tab[%b] = @.singletons.true;

    @.ret = %tab[%a];
    jmp pop_stack;
}

proc std_eq_nonprim {
    %a = @.arg[0];
    %b = @.arg[1];

    %tab = {};
    %tab[%a] = @.singletons.false;
    %tab[%b] = @.singletons.true;

    @.ret = %tab[%a];
    jmp pop_stack;
}
